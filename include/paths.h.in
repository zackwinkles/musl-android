#ifndef _PATHS_H
#define _PATHS_H

#ifndef _PATH_BSHELL
/** Path to the default system shell. Historically the 'B' was
 * to specify the Bourne shell. */
#define _PATH_BSHELL "__BINDIR__/sh"
#endif

/** Path to the system console. */
#define _PATH_CONSOLE "/dev/console"

/** Default shell search path. */
#define _PATH_DEFPATH "__BINDIR__"
#define _PATH_STDPATH "__BINDIR__"

/** Path to the directory containing device files. */
#define _PATH_DEV "/dev/"

/** Path to `/dev/null`. */
#define _PATH_DEVNULL "/dev/null"

/** Path to the kernel log. */
#define _PATH_KLOG "/proc/kmsg"

/** Path to `/proc/mounts` for setmntent(). */
#define _PATH_MOUNTED "/proc/mounts"

/** Path to the calling process' tty. */
#define _PATH_TTY "/dev/tty"

/** Temp file paths. */
#define _PATH_TMP "__HOMEDIR__/tmp/"
#define _PATH_VARTMP "__HOMEDIR__/tmp/"

/** Program run state temporary storage. */
#define _PATH_VARRUN "__HOMEDIR__/.local/state/run/"

